{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true, 
    "allowArbitraryExtensions": true, 
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["src", "vite.config.ts"]
}
